<%= form_with(model: @user, local: true) do |form| %>

  <% if user.errors.any? %>
    <div>
      <h2><%= pluralize(user.errors.count, "error") %></h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, autofocus: true, autocomplete: "username", :class => 'form-control' %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control'%>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, :class => 'form-control' %>
    </div>

    <div>
      <%= form.label :role %>
      <%= form.collection_select(:role_ids, Role.all, :id, :name) %>
    </div>

    <br>

    <div>
      <%= form.submit :class => 'btn btn-primary'%>
    </div>
    <br>

<% end %>
