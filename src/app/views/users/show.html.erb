<div class="card">
    <div class="card-header">
        <h1>Show User <%= @user.id %></h1>
    </div>
    <div class="card-body">
        <div class="form-group">
            <% @idRole = @user.roles.ids %>
            <% @idRole.each do |id|  %>
                <% @unId = id %>
            <% end %>

            <p>Username : <%= @user.username %></p>
            <p>Email : <%= @user.email %></p>
            <p>Role : <%= Role.find(@unId).name %></p>
            

        </div>
        <%= link_to 'Back', users_path, :class => "btn btn-primary", :style => "color: #fff;"%>
    </div>
</div>