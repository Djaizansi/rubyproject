
  <div class="card">
      <div class="card-header">
        <h1>Users</h1>
      </div>
      <div class="card-body">
        <table class="table table-responsive-lg">
          <thead class="thead-dark">
            <tr>
              <th>Id</th>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th colspan="3" class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
                <tr>
                  <% @idRole = user.roles.ids %>
                  <td> <%= user.id %> </td>
                  <td> <%= user.username %> </td>
                  <td> <%= user.email %> </td>
                  <td> 
                    <% @idRole.each do |id|  %>
                      <% @unId = id %>
                    <% end %>
                    <%= Role.find(@unId).name %>
                  </td>
                  <td> <%= link_to('Show', user) %> </td>
                  <td> <%= link_to('Edit', edit_user_path(user)) %> </td>
                  <td> <%= link_to('Destroy', user, method: :delete, data: { confirm: 'Supprimer ?' }) %> </td>
                </tr>
              
            <% end %>
          </tbody>
      </table>
      <%= link_to "New User", new_user_path, :class => 'btn btn-primary', :style => 'color: #fff; background-color: #000000; border: none;' %>
    </div>