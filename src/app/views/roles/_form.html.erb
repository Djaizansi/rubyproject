<%= form_with(model: role, local: true) do |form| %>

  <% if role.errors.any? %>
  <div>
    <h2><%= pluralize(role.errors.count, "error") %></h2>
    <ul>
      <% role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

    <div>
      <%= form.label :name %>
      <%= form.text_field :name, :class => 'form-control'%>
    </div>

    <br>

    <div>
      <%= form.submit :class => 'btn btn-primary'%>
    </div>
    <br>

<% end %>
