
  <div class="card">
      <div class="card-header">
        <h1>Roles</h1>
      </div>
      <div class="card-body">
        <table class="table table-responsive-lg">
          <thead class="thead-dark">
            <tr>
              <th>Role</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @roles.each do |role| %>
            <tr>
              <td> <%= role.name %> </td>
              <td> <%= link_to('Show', role) %> </td>
              <td> <%= link_to('Edit', edit_role_path(role)) %> </td>
              <td> <%= link_to('Destroy', role, method: :delete, data: { confirm: 'Supprimer ?' }) %> </td>
            </tr>
            <% end %>
          </tbody>
      </table>
      <%= link_to "New Role", new_role_path, :class => 'btn btn-primary', :style => 'color: #fff; background-color: #000000; border: none;' %>
    </div>